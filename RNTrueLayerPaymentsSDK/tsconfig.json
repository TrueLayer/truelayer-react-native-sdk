{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "js"
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules", "lib"]
}
